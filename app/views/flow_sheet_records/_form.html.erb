    <%= f.text_field :heart_rate %>
  </div>
</div> 
<div class="row-fluid alternateGray1 dataRowDark">  
  <div class="span4">
    <%= f.label :respiratory_rate, "Respiratory Rate" %><br />
    <%= f.text_field :respiratory_rate %>
