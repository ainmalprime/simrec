<h1>Listing visits</h1>

<table>
  <tr>
    <th>Patient</th>
    <th>Mr Number</th>
    <th>Chief Complaint</th>
    <th>Discharge Diagnosis</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @visits.each do |visit| %>
  <tr>
    <td><%= visit.patient_id %></td>
    <td><%= visit.mr_number %></td>
    <td><%= visit.chief_complaint %></td>
    <td><%= visit.discharge_diagnosis %></td>
    <td><%= link_to 'Show', visit %></td>
    <td><%= link_to 'Edit', edit_visit_path(visit) %></td>
    <td><%= link_to 'Destroy', visit, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Visit', new_visit_path, class: "btn" %>
