<%= form_for(@visit) do |f| %>
  <% if @visit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@visit.errors.count, "error") %> prohibited this visit from being saved:</h2>

      <ul>
      <% @visit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row_fluid">
    <% if @visit.patient_id.blank?%>

        <div class="span12">
          <%= f.label :patient_id %><br />
          <%= f.number_field :patient_id %>
        </div>

    <% else %>
        <div class="span12">
          <%= f.hidden_field :patient_id %>
        </div>

    <% end %>
  </div>
  <div class="row_fluid">
     <div class="span10">
      <%= f.label :visit_time, "Date and time of visit" %><br />
      <%= f.datetime_select :visit_time, :id => "datetimeselect"%>
    </div>
    <div class="span2">
      <%= f.label :duration_til_now_hours, "visit time auto resets to how many hours ago?" %><br />
      <%= f.number_field :duration_til_now_hours%>
    </div>
  </div>
  <div class="row_fluid">
    <div class="span4">
      <%= f.label :mr_number, "Medical record number" %><br />
      <%= f.text_field :mr_number %>
    </div>
    <div class="span4">
      <%= f.label :chief_complaint, "Chief complaint" %><br />
      <%= f.text_field :chief_complaint %>
    </div>
    <div class="span4">
      <%= f.label :discharge_diagnosis, "Discharge diagnosis"%><br />
      <%= f.text_field :discharge_diagnosis %>
    </div>

  </div>
  <div style="row_fluid">
    <div class="btn-group span12" >
      <%= f.submit 'Save visit', :class => "btn" %>
<% end %>
