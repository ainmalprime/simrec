<%= form_for(@medical_administration_record) do |f| %>
  <% if @medical_administration_record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medical_administration_record.errors.count, "error") %> prohibited this medical_administration_record from being saved:</h2>

      <ul>
      <% @medical_administration_record.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row_fluid">
    <% if @medical_administration_record.visit_id.blank?%> 
      <div class="span12">
        <%= f.label :visit_id %><br />
        <%= f.number_field :visit_id %>
      </div>
     <% else %>
      <div class="span12">
        <%= f.hidden_field :visit_id %>
      </div>
    <% end %>
  </div>
  <% if !session[:simulation_mode] %>
    <div class="row-fluid">
      <div class="span8">
        <%= f.label :time_recorded, "time recorded" %><br />
        <%= f.datetime_select :time_recorded %>
      </div>
      <div class="span4">
        <%= f.label :minutes_after_start_of_visit %><br />
        <%= f.text_field :minutes_after_start_of_visit %>
      </div>
    </div>
    <%end%>
  <div class="row-fluid">
    <div class="span6">
      <%= f.label :description, "description"%><br />
      <%= f.text_field :description %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <%= f.label :note, "details" %><br />
      <%= f.text_area :note, :class => "tinymce "%>
      <%= tinymce %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <%= f.label :clinician_signature, "clinician signature" %><br />
      <%= f.text_field :clinician_signature %>
    </div>
  <div class="row-fluid">
    <div class="span12 btn-group">
      <%= f.submit "save", :class => "btn" %>
<% end %>
