<%= form_for(@medical_administration_record) do |f| %>
  <% if @medical_administration_record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medical_administration_record.errors.count, "error") %> prohibited this medical_administration_record from being saved:</h2>

      <ul>
      <% @medical_administration_record.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row_fluid">
    <% if @medical_administration_record.visit_id.blank?%> 
      <div class="span12">
        <%= f.label :visit_id %><br />
        <%= f.number_field :visit_id %>
      </div>
     <% else %>
      <div class="span12">
        <%= f.hidden_field :visit_id %>
      </div>
    <% end %>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <%= f.label :timeRecorded, "time recorded" %><br />
      <%= f.datetime_select :timeRecorded %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <%= f.label :actionDescription, "Description"%><br />
      <%= f.text_area :actionDescription %>
    </div>

    <div class="span6">
      <%= f.label :actionDetails, "Details" %><br />
      <%= f.text_area :actionDetails %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <%= f.label :clinicianSignature, "Clinician Signature" %><br />
      <%= f.text_field :clinicianSignature %>
    </div>
  <div class="row-fluid">
    <div class="span12 btn-group">
      <%= f.submit "Record MAR Entry", :class => "btn" %>

<% end %>
