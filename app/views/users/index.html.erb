<% content_for :title, "Registered users"%>
<h1>Registered users</h1>

<div class="row-fluid">
    <div class="span3"><h3>user name</h3></div>
    <div class="span3"><h3>email</h3></div>
</div>

<% @users.each do |user| %> 
  <div class="row-fluid">
    <div class="span3"><%= user.name %></div>
    <div class="span3"><%= user.email %></div>
    <div class="span6 btn-group">

      <%= link_to 'View', user_path(user), class: "btn" %>
      <%= link_to 'Edit', edit_user_path(user), class: "btn"  %>
      <%= link_to 'Change Password', edit_user_path(user, password: true), class: "btn"  %>
      <%= link_to 'Delete', user, confirm: 'Are you sure?', method: :delete, class: "btn"  %>
    </div>
  </div>
<% end %>

<br/>
<br/>

<div class="row-fluid">
  <div class="offset6 span6">
    <%= link_to 'New user', new_user_path, class: "btn" %>
  </div>
</div>