
  <div class="patient-info-header" > 
    <h3>Vitals and Ins/Outs </h3>
  </div>
  <div  class="patientInfo" id="vitals">
  <%if @flow_sheet_records.any? %> 
    <div class="row-fluid dataRow">
      <div class="span2"> Date and Time </div>
      <div class="span3"> Vital Signs </div> 
      <div class="span2"> Fluid Intake </div>
      <div class="span2"> Fluid Output </div>
    </div>
    <%= render @flow_sheet_records %>
  <% else %>
    <div class="message">
      <span class="label label-info">Note:</span> 
        <div> 
          No flow sheet data are associated with this vist.</br>
          Use the "New flow sheet record" button below to add flow sheet data.
      </div>
    </div>
  <%end%>
  <div class="btn bottomButton">
    <%= link_to 'New Flow Sheet Record', new_flow_sheet_record_path(:visit_id => @selectedVisit.id), remote: true %>
  </div>
</div>
  