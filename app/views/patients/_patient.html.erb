
<div class="row-fluid">

  <div class="span12 ">
      <div class="patientImage">
      <% if @patient.image_file_id.blank? %> 
        No image supplied
      <%else%> 
        <%= image_tag("/image/#{@patient.image_file_id}", :alt => "Image") %>
      <% end %>
    </div>
    <strong><%= @patient.first_name %>  <%= @patient.middle_initial %> <%= @patient.last_name %></strong>

    <p>Patient Number: <strong><%= @patient.patient_number %></strong> Date of Birth: <strong><%= @patient.date_of_birth %></strong><br />
   Allergies: <strong><%= @patient.drug_allergies %></strong> PCP: <strong><%= @patient.primary_care_physician %></strong> <br /> Insurance: <strong><%= @patient.insurance_carrier %></strong></p>
  </div>
</div>
<div class="row-fluid">
  <div class="span5">
    Address:<br />
    <strong><%= @patient.address %></strong>
  </div>
  <div class="span5">
    <p>Phone Number<br />
     <%= @patient.telephone_1_type %><strong><%= @patient.telephone_1 %> </strong><br />
      <%= @patient.telephone_2_type %> <strong><%= @patient.telephone_2 %></strong></p>
  </div>
</div>
          